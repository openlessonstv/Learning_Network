<%= form_for(@lesson) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<%= f.hidden_field :course_id %>
<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :description %><br />
  <%= f.text_field :description %>
</div>
<div class="actions">
  <%= f.submit "Sign up" %>
</div>
<% end %>
