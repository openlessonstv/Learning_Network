<h3>
<%= link_to_if course.lessons.any?, course.name, lesson_path(course.lessons.first) %>
<% if signed_in? && current_user.is_admin? %>
<%= link_to "Edit Course", edit_course_path(course) %>
<%= button_to "Delete Course", { :action => "destroy", :id => course.id }, :confirm => "Are you sure?", :method => :delete %>
<% end %>
<% if request.url != course_url(course) %>
| 
<%= link_to lesson_link_text, course_path(course) %> 
<% end %>
</h3>
