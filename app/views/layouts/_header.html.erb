

	<div  id="header" style="">
		<div class="container" >
			<div class="span-21">
				<div id="header-logo-position">
					<%= link_to image_tag("openlessons-logo.png"), root_path %>
				</div>
			</div>
			<div class="span-3 last">
				<div class="header-links">
					<%= link_to "Courses", courses_path %>
					<% if !signed_in? %>
					<%= link_to "Sign In", sign_in_path %>
					<% else %>
					<%= form_tag(sign_out_path, :method => "delete") do -%>
					<%= submit_tag "Sign Out" %>					
					<% end -%>
					<%= link_to current_user.name, user_path(current_user) %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
		
