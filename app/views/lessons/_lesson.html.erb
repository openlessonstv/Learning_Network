<div class="span-3" id="bottom-left-lesson">
<% if lesson.videos.any? %>
	<%= link_to image_tag (lesson.videos.first.thumbnail_url), lesson_path(lesson) %>
	<%= link_to lesson.name, lesson_path(lesson) %><br />
<% else %>
	<%= lesson.name %><br />
<% end %>
<% if signed_in? && current_user.is_admin? %>
<%= link_to "Edit Lesson", edit_lesson_path(lesson) %><br />
<%= button_to "Delete Lesson", { :controller => "lessons", :action => "destroy", :id => lesson.id }, :confirm => "Are you sure?", :method => :delete %>
<%= link_to edit_video_link_text(lesson), lesson_videos_path(lesson) %>
<% end %>
</div>
